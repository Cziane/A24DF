{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "czweatherdf"
		},
		"WeatherForcastSQLDatabase_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'WeatherForcastSQLDatabase'"
		},
		"WeatherStorageAccount_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'WeatherStorageAccount'"
		},
		"OpenMEteoAPI_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://api.open-meteo.com/"
		},
		"OpenMeteo_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://api.open-meteo.com/"
		},
		"WeatherForcastSQLDatabase_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "czweather.database.windows.net"
		},
		"WeatherForcastSQLDatabase_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "weatherfc"
		},
		"WeatherForcastSQLDatabase_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "dsti_admin"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "czweatherdf_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"WeatherForcastSQLDatabase_password": {
						"value": "[parameters('WeatherForcastSQLDatabase_password')]"
					},
					"WeatherStorageAccount_connectionString": {
						"value": "[parameters('WeatherStorageAccount_connectionString')]"
					},
					"OpenMEteoAPI_properties_typeProperties_url": {
						"value": "[parameters('OpenMEteoAPI_properties_typeProperties_url')]"
					},
					"OpenMeteo_properties_typeProperties_url": {
						"value": "[parameters('OpenMeteo_properties_typeProperties_url')]"
					},
					"WeatherForcastSQLDatabase_properties_typeProperties_server": {
						"value": "[parameters('WeatherForcastSQLDatabase_properties_typeProperties_server')]"
					},
					"WeatherForcastSQLDatabase_properties_typeProperties_database": {
						"value": "[parameters('WeatherForcastSQLDatabase_properties_typeProperties_database')]"
					},
					"WeatherForcastSQLDatabase_properties_typeProperties_userName": {
						"value": "[parameters('WeatherForcastSQLDatabase_properties_typeProperties_userName')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}